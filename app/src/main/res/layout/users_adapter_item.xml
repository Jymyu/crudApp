<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/dimens_5dp"
    app:cardElevation="@dimen/dimens_5dp"
    android:backgroundTint="@color/card_background"
    app:contentPadding="@dimen/dimens_5dp"
    android:layout_marginTop="@dimen/dimens_5dp"
    android:layout_marginHorizontal="@dimen/dimens_5dp"
    android:layout_marginBottom="@dimen/dimens_14dp">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimens_5dp"
        >
        <TextView
            android:id="@+id/tv_name_adapter_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentTop="true"
            tools:text="NAME" />

        <TextView
            android:id="@+id/tv_birthdate_adapter_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dimens_5dp"
            android:layout_below="@id/tv_name_adapter_item"
            tools:text="13/44/1995" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>